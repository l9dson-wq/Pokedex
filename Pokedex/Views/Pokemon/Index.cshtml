@model List<Application.ViewModel.PokemonViewModel>
@{
    ViewData["Title"] = "Pokemon Page";
}

<h2 class="text-center">Mantenimiento de pokemones</h2>

<div class="container mx-auto mt-4">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Pokemon" asp-action="Create" class="btn btn-outline-success">Add new pokemon</a>
        </div>
    </div>


    @if (Model == null || Model.Count == 0)
    {
        <h2>No hay pokemones</h2>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 mt-5">
            @foreach (Application.ViewModel.PokemonViewModel item in Model)
            {

                <div class="col-sm-1 mt-4">
                    <div class="cardw border border-1 border-dark rounded" style="width: 17rem;">
                        <img src="@item.Imagepath" class="card-img-top border-bottom border-1 border-dark" style="Background-image: url(css/images/Pokemon-forest-by-BlazingIfrit-Fur-Affinity-dot-net.jpg); Background-position: center; " alt="...">
                        <div class="card-body">
                            <h5 class="card-title text-center">@item.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted text-center">#@item.Id</h6>
                            <div class="d-flex justify-content-center align-items-center">
                                <label class="bg-success text-white rounded-pill m-2 p-2">@item.Pokemon_type.Name</label>
                                @if (item.Secundary_pokemonType == null)
                                {
                                    <a></a>
                                }
                                else
                                {
                                    <label class="rounded bg-success text-white rounded-pill m-2 p-2">@item.Secundary_pokemonType.Name</label>
                                }
                                <label class="bg-primary text-white rounded-pill m-2 p-2">@item.Region.Name</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center alignn-items-center">
                            <a class="text-white text-decoration-none bg-primary p-2 rounded m-1" asp-controller="Pokemon" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="text-white text-decoration-none bg-danger p-2 rounded m-1" asp-controller="Pokemon" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>